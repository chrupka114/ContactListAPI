@model Contact
<form method="post" asp-action="DeletePOST">
	<input asp-for="ID" hidden/>
	<div class="border p-3 mt-4">
		<div class="row pb -2">
			<h2 class="text-primary" >Delete Contact</h2>
			<hr/>
		</div>
		<div class="mb-3">
			<label asp-for="Name">Name</label>
			<input asp-for="Name" disabled class="form-control" />

		</div>
		<div class="mb-3">
			<label asp-for="Surname">Surname</label>
			<input asp-for="Surname" disabled class="form-control" />

		</div>
				</div>
		<div class="mb-3">
			<label  class="text-danger">Are you sure you want to delete this contact?</label>
		</div>
		<button type="submit" class="btn btn_danger" style="width":150px>Delete</button>
		<a asp-controller="Home" asp-action="Index" class="btn-secondary" style="width:150px">
			back to list
		</a>
	</div>
</form>



