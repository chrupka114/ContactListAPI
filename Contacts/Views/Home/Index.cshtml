@model IEnumerable<Contact>

@{
	ViewData["Title"] = "Home Page";
}

<!--showing status at top of the page -->
@if (TempData["success"] != null)
{
					<h2>@TempData["success"]</h2>
}
@if (TempData["loginsuccess"] != null)
{

				<h2>@TempData["loginsuccess"]</h2>

}
<!--button for creating new contact -->
<div= class="container p-3">
	<div class="row pt-4">
	   <div class="col-6" text-end>
		   <h2 class="text-primary">Contact List</h2>
	   </div>


			  <div class="col-6">
				  <a asp-controller="Home" asp-action="Create" class="btn bty-primary">
					  <i class="bi bi-person-plus-fill"></i>&nbsp; Create new contact
				  </a>
	   </div>

					 <div class="col-6">
				  <a asp-controller="Home" asp-action="Register" class="btn bty-primary">
					  <i class="bi bi-person-plus-fill"></i>&nbsp; Register
				  </a>
	   </div>

					 <div class="col-6">
				  <a asp-controller="Home" asp-action="Login" class="btn bty-primary">
					  <i class="bi bi-person-plus-fill"></i>&nbsp; Login
				  </a>
	   </div>
	</div>
</div>

<!--listing all contacts -->
<table class="table table-bordered table-striped" style="width:100%">
	<thead>
		<tr>
			<th>
				Contact name
			</th>
				<th>
				Contact surname
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody><!--listing data from database -->
		@foreach (var obj in Model)
		{
							<tr>
								<td width="50%">
					@obj.Name
								</td>
									 <td width="30%">
					@obj.Surname
									</td>
									<td width=20%>
										<div class="w-75 vtn-group" role="group">
												<a asp-controller="Home" asp-action="Edit" asp-route-id="@obj.ID"
                                class=btn btn-primary mx-2><i class="bi bi-pencil-fill"></i>Edit</a>
													<a asp-controller="Home" asp-action="Delete" asp-route-id="@obj.ID"
                                    class=btn btn-primary mx-2><i class="bi bi-trash-fill"></i>Delete</a>
												  <a asp-controller="Home" asp-action="Info" asp-route-id="@obj.ID"
                                    class=btn btn-primary mx-2><i class="bi bi-info-circle-fill"></i>Info</a>
										</div>
									</td>
							</tr>
		}
	</tbody>
</table>
